@model CMS_NetCore.DomainClasses.AttributeItem

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-horizontal" style="padding:10px">
        <div class="form-group">
            <label asp-for="Name" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Value" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="Value" class="form-control"/>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FilterId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="FilterId" class="form-control"/>
                <span asp-validation-for="FilterId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="AttributeGroupId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="AttributeGroupId" class="form-control" asp-items="ViewBag.AttributGrpId"></select>
            </div>
        </div>
        <div class="form-actions text-left">
            <button type="submit" class="btn btn-info btn-round">
                <i class="icon-check"></i>
                ذخیره
            </button>
            <a data-dismiss="modal" class="btn btn-warning btn-round">
                <i class="icon-close"></i>
                بازگشت
            </a>
        </div>
    </div>
</form>

<script>
    $.validator.unobtrusive.parse(document);

     $(function () {
            //Set the value of your TypeId <select>
         $('#AttributeGroupId').val('@Url.ActionContext.RouteData.Values["id"]');
    });
</script>