@model IEnumerable<CMS_NetCore.DomainClasses.AttributeGroup>

@foreach (var grp in Model)
{
 <div class="col-md-3" >
    <lable class="badge-inverse text-white text-center table-responsive col-md-12" style="width:100%">
        @grp.Name را انتخاب کنید
    </lable>
    <div class="col-md-12" style="height:500px;overflow:scroll">
        <br />

        <table class="table table-bordered table-striped table-responsive text-center">
            <tr>
                <td>
                    <input class="" name="Grp_@grp.Id" value="none" type="radio" />
                </td>
                <td>
                    هیچکدام
                </td>
            </tr>
            @foreach (var attr in grp.AttributeItems)
            {
                var selected = "";
                if (ViewBag.ProductId != null)
                {
                    if (attr.ProductAttributes.Any(x => x.ProductId == ViewBag.ProductId))
                    {
                        selected = "checked";
                    }
                }
            <tr style="width:30px;">
                <td>
                    <input class="" name="Grp_@grp.Id" @selected value="@attr.Id" type="radio" />
                </td>
                <td>
                    @attr.Name
                </td>
            </tr>
            }
        </table>
    </div>
</div>
}
