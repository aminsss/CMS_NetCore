@model IEnumerable<CMS_NetCore.DomainClasses.Menu>
@{
    int depth = ViewBag.Depth;
    int parentId = ViewBag.ParentId;
    if (depth == 0)
    {
        <option value="0">--ریشه گزینه منو--</option>
    }
    foreach (var item in Model.Where(x => x.Depth == depth && x.ParentId == parentId))
    {
        <option value="@item.Id">@string.Concat(Enumerable.Repeat(" - ", Convert.ToInt32(item.Depth))) @item.MenuTitle</option>
        if (Model.Any(s => s.ParentId == item.Id))
        {
            @await Component.InvokeAsync("MenuList", new { depth = (item.Depth + 1), parentId = item.Id, menuGroupId = item.MenuGroupId })
        }
    }
}