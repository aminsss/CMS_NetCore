@model IEnumerable<CMS_NetCore.DomainClasses.OrderDetail>

<div class="table-responsive portlet box border shadow">
    <div class="portlet-heading">
        <h2>جزئیات سفارش</h2>
    </div>

    <table class="table table-bordered table-hover table-striped text-center" id="data-table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.ProductCount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sum)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.IsFinally)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order.CreatedDate)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var item in Model)
                {
                <tr>

                    <td>
                        @Html.DisplayFor(modelitem => item.ProductCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.ProductPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Sum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Order.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Product.Title)
                    </td>
                    <td>
                        @if (item.Order.IsFinally == true)
                        {
                            <label class="label-success">پرداخت شده</label>
                        }
                        else
                        {
                            <label class="label-danger">پرداخت نشده</label>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelitem => item.Order.CreatedDate)
                    </td>

                </tr>
            }
            </tbody>
        </table>
        <div class="pull-left">
            <a asp-action="Index" class="btn btn-info btn-round">بازگشت</a>
        </div>
        <br />
    </div>



