@model CMS_NetCore.DomainClasses.Message

<div class="table-responsive portlet box border shadow">
    <div class="portlet-heading">
        <h2 class="col-md-10">مشاهده پیام</h2>
        <div>
            <a class="btn btn-info btn-round" asp-action="Create" asp-route-id="@Model.Id">پاسخ به پیام</a>
            <a asp-action="Index" class="btn btn-warning btn-round">بازگشت</a>
        </div>
        <br />
    </div>
    <table id="data-table">
        <tr>
            <th class="col-md-2">
                فرستنده
            </th>
            <td class="pull-right">
                @if (Model.FromUser == null)
                {
                    <span>
                        @Html.DisplayFor(modelitem => Model.SenderName)
                    </span>
                }
                else
                {
                    <img class="img-person img-circle" src="~/Upload/Profile/thumbnail/@Model.UserFrom.Profile">
                    <span>
                        @Html.DisplayFor(modelitem => Model.UserFrom.Mobile)
                    </span>
                }
            </td>

        </tr>
        <tr>
            <th class="col-md-2">
                ایمیل
            </th>
            <td class="pull-right">
                @if (Model.FromUser == null)
                {
                    @Html.DisplayFor(model => model.Email)
                }
                else
                {
                    @Html.DisplayFor(model => model.UserFrom.Email)

                }
            </td>
        </tr>
        <tr>
            <th class="col-md-2">
                تاریخ
            </th>
            <td class="pull-right">
                @Html.DisplayFor(model => model.CreatedDate)
            </td>
        </tr>
        <tr>
            <th class="col-md-2">
                موضوع پیام
            </th>
            <td class="pull-right">
                @Html.DisplayFor(model => model.Subject)
            </td>
        </tr>
    </table>
    <br />
    <div class="self " style="word-break: break-all">
        <div class="content message">
            @Html.Raw(Model.ContentMessage)
        </div>
    </div>
    <br />
</div>


<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="myModalLabel" class="myModalLabel">تیتر مودال</h4>
            </div>
            <div id="bodyModal" class="bodyModal">
            </div>
        </div>
    </div>
</div>

@section Script{

    <script type="text/javascript">

        function Delete(id) {
            $.ajax({
                url: "/admin/Users/Delete/" + id,
                type: "Get",
                data: {}
            }).done(function (result) {
                $('#myModal').modal('show');
                $('#myModalLabel').html('آیا از حذف این مورد اطمینان دارید؟');
                $('#bodyModal').html(result);
            });
        }

        $("#pagesizelist").change(function (event) {
            var form = $(event.target).parents("form");
            form.submit();
        });
    </script>
}