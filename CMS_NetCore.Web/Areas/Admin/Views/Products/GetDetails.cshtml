@model IEnumerable<CMS_NetCore.DomainClasses.DetailGroup>
@foreach (var grp in Model)
{
    <div class="col-md-12">
        <br />
        <lable class="badge-inverse text-white text-center table-responsive col-md-12" style="width:100%">
            @grp.Name را وارد کنید
        </lable>
        <table class="table table-bordered table-striped table-responsive text-center">

            @foreach (var det in grp.DetailItem)
            {
                string value = "";
                if (ViewBag.ProductId != null)
                {
                    if (det.ProductDetail.Any(v => v.ProductId == ViewBag.ProductId))
                    {
                        value = det.ProductDetail.FirstOrDefault(v => v.ProductId == ViewBag.ProductId).Value;
                    }
                }
                <tr>
                    <td>
                        @det.DetailTitle
                    </td>
                    <td>
                        <textarea class="ltr" name="detItem_@det.DetailItemId" value="" rows="3">@value</textarea>
                    </td>
                </tr>
            }
        </table>
    </div>
}
