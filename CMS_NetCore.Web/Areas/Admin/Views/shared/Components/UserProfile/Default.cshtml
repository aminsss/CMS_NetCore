@model CMS_NetCore.DomainClasses.User

<a href="#" class="dropdown-toggle dropdown-hover" data-toggle="dropdown">
    <img src="~/Upload/Profile/thumbnail/@Model.Profile" alt="عکس پرفایل" width="40" height="20" class="img-circle img-responsive">
    <span>@Model.Name</span>
    <i class="icon-arrow-down"></i>
</a>
<ul class="dropdown-menu">
    <li>

        <a href="/admin/users/edit/@Model.Id">
            <i class="icon-note"></i>
            ویرایش پروفایل
        </a>
    </li>
    <li>
        <a href="/Admin/Users/changePass/@Model.Id">
            <i class="icon-key"></i>
            تفییر رمز عبور
        </a>
    </li>
    <li class="divider"></li>
    <li>
        <a href="/admin/Messages/Index">
            <span class="badge badge-primary pull-left"> @Model.MessagesFrom.Where(u => u.IsRead == false).Count() </span>
            <i class="icon-envelope"></i>
            پیام های جدید
        </a>
    </li>
    <li>
        <a href="#">
            <i class="icon-wallet"></i>
            کیف پول
        </a>
    </li>
    <li class="divider"></li>
    <li>
        <a href="/Account/SignOut">
            <i class="icon-power"></i>
            خروج
        </a>
    </li>
</ul>
