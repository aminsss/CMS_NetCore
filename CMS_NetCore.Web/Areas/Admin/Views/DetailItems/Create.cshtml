@model CMS_NetCore.DomainClasses.DetailItem

<form asp-action="Create">
    <div class="form-horizontal" style="padding:10px">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DetailTitle" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="DetailTitle" class="form-control" />
                <span asp-validation-for="DetailTitle" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="DetailGroupId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="DetailGroupId" class="form-control" asp-items="ViewBag.DetailGroupId"></select>
            </div>
        </div>
        <div class="form-actions text-left">
            <button type="submit" class="btn btn-info btn-round">
                <i class="icon-check"></i>
                ذخیره
            </button>
            <a asp-action="Index" asp-route-id="@ViewBag.DetailGroupSelected" class="btn btn-warning btn-round">
                <i class="icon-close"></i>
                بازگشت
            </a>
        </div>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>

<script>
     $(function () {
            //Set the value of your TypeId <select>
         $('#DetailGroupId').val('@ViewBag.DetailGroupSelected');
    });
</script>
